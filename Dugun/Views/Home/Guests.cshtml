                            <label>Telefon:</label>
                            <input id="userTcInfo" placeholder="Telefon" name="userTel" data-mask="decimal" maxlength="11" class="form-control" tabindex="2">
                        </div>
                        <div class="form-group">
                            <label>EMail Adresi:</label>
                            <input id="userMailInfo" placeholder="EMail" name="userMailInfo" class="form-control" tabindex="2">
